{{!
    @template local_competvetsuivi/matrix_list

    This template will render all competvet suivi matrix
}}

<div>
    <div class="action">
        <a href="{{{addactionurl}}}" class="btn btn-primary" role="button">{{#str}}matrix:add, local_competvetsuivi{{/str}}</a>
    </div>
    <div>
        <table class="generaltable fullwidth">
            <thead>
            <tr>
                <th scope="col">{{#str}}matrixname, local_competvetsuivi{{/str}}</th>
                <th scope="col">{{#str}}matrixshortname, local_competvetsuivi{{/str}}</th>
                <th scope="col">{{#str}}action{{/str}}</th>
            </tr>
            </thead>
            <tbody>
            {{#matrix}}
                <tr>
                    <td>{{fullname}}</td>
                    <td>{{shortname}}</td>
                    <td>
                        <a href="{{viewurl}}">{{# pix }} t/viewdetails, core, {{# str }} matrix:view, local_competvetsuivi {{/ str }} {{/ pix }}</a>
                        <a href="{{editurl}}">{{# pix }} t/edit, core, {{# str }} matrix:edit, local_competvetsuivi {{/ str }} {{/ pix }}</a>
                        <a href="{{deleteurl}}">{{# pix }} t/delete, core, {{# str }} matrix:delete, local_competvetsuivi {{/ str }} {{/ pix }}</a>
                    </td>
                </tr>
            {{/matrix}}
            </tbody>
        </table>
    </div>
</div>